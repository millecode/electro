{% extends 'base.html.twig' %}

{% block title %}
	Liste des services | Electro-Multifix
{% endblock %}

{% block body %}

	{% include 'admin/_menu.html.twig' %}


	<div class="my-3 text-center">
		<h2>Liste des services</h2>
	</div>


	<div class="container">
		<div class="row my-5">

			<div class="col-12 col-md-4">
				{% for type, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card">
					<div class="card-header">
						<h5 class="text-center">Enregistrer un service</h5>
					</div>

					<div class="card-body">
						{{form_start(form)}}
						{{form_widget(form)}}
						<input type="submit" value="Enregistrer" class="btn btn-warning">
						{{form_end(form)}}
					</div>
				</div>

				<div class="table-reponsive my-5">
					<table class="table table-striped table-bordered border-dark">
						<thead>
							<tr class="text-center">
								<th colspan="3">Services le plus utilisés</th>
							</tr>
						</thead>
						<tbody>
							{% for result in serviceslistereparation %}
								<tr>
									<td>{{ result.service.titre }}</td>

									<td>
										{% if result.service.status == 1 %}
											<span class="badge bg-success">Actif</span>
										{% else %}
											<span class="badge bg-danger">Inactif</span>
										{% endif %}
									</td>

									<td>
										{{ result.repairCount }}
										reparation</td>
								</tr>

							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>


			<div class="col-12 col-md-8">
				<h6 class="my-3">Liste des services</h6>
				{% if services is empty %}
					<div class="alert alert-info">
						<p>Aucune service trouvée.</p>
					</div>
				{% else %}


					<div class="table-responsive my-3">
						<table class="table table-hover rounded">
							<thead class="text-center table-success">
								<tr>

									<th>Matricule</th>
									<th>Image du services</th>
									<th>Titre</th>
									<th>Date</th>
									<th>Status</th>
									<th colspan="2">Action</th>
								</tr>
							</thead>

							<tbody class="text-center">
								{% for service in services %}
									<tr class="align-middle">
										<td class="text-center align-middle">{{service.matricule}}</td>
										<td class="text-center align-middle">
											<img src="{{asset('assets/images/services/'~ service.image)}}" class="img-fluid rounded" width="60px" alt="{{service.titre}}">
										</td>
										<td class="text-center align-middle">
											{{service.titre|slice(0, 15) ~ '...' }}
										</td>
										<td class="text-center align-middle">
											{{service.date|date('d/m/Y')}}
										</td>


										<td class="text-center align-middle">

											<label class="form-switch">
												<input type="checkbox" role="switch" {{(service.status) ? 'checked' : ''}} data-id="{{service.id}}">
											</label>

										</td>

										<td class="text-center align-middle ">
											<form action="{{path('admin_service_supp',{'id':service.id})}}" method="post" onsubmit="return confirm('Confirmer la suppression du service ?');" class="d-inline">
												<input type="hidden" name="_token" value="{{ csrf_token('SUP' ~ service.id) }}">
												<button type="submit" class="btn btn-danger">
													<i class="fa-regular fa-trash-can"></i>
												</button>
											</form>
											<a href="{{path('admin_service_modif',{'id':service.id})}}" class="btn btn-warning">
												<i class="fa-regular fa-pen-to-square"></i>
											</a>

											<a href="{{path('admin_voir_service',{'matricule':service.matricule,'id':service.id})}}" class="btn btn-info">
												<i class="fa-solid fa-eye"></i>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<div class="navigation">
						{{ knp_pagination_render(services) }}
					</div>
				{% endif %}
			</div>
		</div>
	</div>


	<script>
		window.onload = () => {
let activer = document.querySelectorAll("[type=checkbox]")
for (let bouton of activer) {
bouton.addEventListener("click", function () {
let xmlhttp = new XMLHttpRequest;
xmlhttp.open("get", `/admin/services/listes/activer/${
this.dataset.id
}`)
xmlhttp.send()
})
}
}
	</script>
{% endblock %}
