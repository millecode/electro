{% extends 'base.html.twig' %}
{% block title %}
	Modific√©ation du mot de passe | Electro-Multifix
{% endblock %}
{% block body %}


	<div class="page-header parallaxie">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="page-header-box">
						<h1 class="text-anime">Modification du profile.</h1>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow-lg">
					<div class="card-header bg-primary text-white text-center">
						<h4>Modifier le Mot de Passe</h4>
					</div>
					<div class="card-body">
						{% for type, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ type }} alert-dismissible fade show my-2" role="alert">
									{{ message }}
									<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
								</div>
							{% endfor %}
						{% endfor %}
						<form method="post" action="{{ path('modifier_password') }}">
							<div class="mb-3">
								<label for="current_password" class="form-label">Mot de passe actuel</label>
								<input type="password" class="form-control" id="current_password" name="current_password" required>
							</div>
							<div class="mb-3">
								<label for="new_password" class="form-label">Nouveau mot de passe</label>
								<input type="password" class="form-control" id="new_password" name="new_password" required>
							</div>
							<div class="mb-3">
								<label for="confirm_password" class="form-label">Confirmer le nouveau mot de passe</label>
								<input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
							</div>
							<button type="submit" class="btn btn-primary">Modifier le mot de passe</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
