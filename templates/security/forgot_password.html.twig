{% extends 'base.html.twig' %}

{% block title %}
	Mot de passe oublé | Electro-Multifix
{% endblock %}

{% block body %}


	<div class="page-header parallaxie">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="page-header-box">
						<h1 class="text-anime">Mot de passe oublié</h1>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="contact-inquiry-box mb-5">
		<div class="container">
			<div class="row">
				<div class="col-md-12">

					<div class="section-title">
						<h3 class="wow fadeInUp">Réinitialisation de votre mot de passe.</h3>
						<p>Veuillez entrer votre e-mail pour recevoir un lien de réinitialisation.</p>
					</div>
				</div>


				<div class="row">

					<div class="col-12 col-md-2"></div>
					<div class="col-12 col-md-8">
						{% for type, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ type }} alert-dismissible my-2 fade show" role="alert">
									{{ message }}

								</div>
							{% endfor %}
						{% endfor %}
						<form method="post">
							<div class="card ">
								<div class="card-body">
									<div class="form-group">
										<label for="email">E-mail</label>
										<input type="email" name="email" id="email" class="form-control border border-dark" required>
									</div>
									<button type="submit" class="btn btn-warning mt-3">Envoyer</button>
								</div>
							</div>
						</form>
					</div>
					<div class="col-12 col-md-2"></div>
				</div>

			</div>
		</div>
	</div>


{% endblock %}
