{% extends 'base.html.twig' %}

{% block title %}
	Se Connecter | Electro-Multifix
{% endblock %}

{% block body %}


	<div class="page-header parallaxie">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="page-header-box">
						<h1 class="text-anime">Connectez-vous</h1>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="contact-inquiry-box mb-5">
		<div class="container">
			<div class="row">
				<div class="col-md-12">

					<div class="section-title">
						<h3 class="wow fadeInUp">Veuillez se connecter.</h3>
					</div>
				</div>


				<div class="row">

					<div class="col-12 col-md-2"></div>
					<div class="col-12 col-md-8">
						<form method="post">
							<div class="card ">
								<div class="card-body">
									{% for type, messages in app.flashes %}
										{% for message in messages %}
											<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
												{{ message }}
												<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
											</div>
										{% endfor %}
									{% endfor %}
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}


									<div class="mt-3">
										<label for="inputEmail">Email</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control boreder border-dark" autocomplete="email" required autofocus>
									</div>

									<div class="mt-3">
										<label for="inputPassword">Password</label>
										<input type="password" name="password" id="inputPassword" class="form-control boreder border-dark" autocomplete="current-password" required>
									</div>

									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

									<div class="my-2">
										<a href="{{path('mot-de-passe-oublier')}}">Mot de passe oubli√©.</a>
									</div>
									<div class="mt-3">
										<button class="btn-default" type="submit">
											Se connecter
										</button>
									</div>
								</div>
								<p class="my-2 p-3">Vous n'avez pas un compte ?
									<a href="{{path('inscription')}}">S'inscrire</a>
								</p>
							</div>

						</form>
					</div>
					<div class="col-12 col-md-2"></div>
				</div>

			</div>
		</div>
	</div>


{% endblock %}
