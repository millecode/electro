{% extends 'base.html.twig' %}

{% block title %}
	Nouveau mot de passe | Electro-Multifix
{% endblock %}

{% block body %}


	<div class="page-header parallaxie">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="page-header-box">
						<h1 class="text-anime">Réinitialiser votre mot de passe</h1>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="contact-inquiry-box mb-5">
		<div class="container">
			<div class="row">
				<div class="col-md-12">

					<div class="section-title">
						<h3 class="wow fadeInUp">Entrez un nouveau mot de passe.</h3>
					</div>
				</div>


				<div class="row">

					<div class="col-12 col-md-2"></div>
					<div class="col-12 col-md-8">
						{% for type, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ type }} alert-dismissible my-2 fade show" role="alert">
									{{ message }}

								</div>
							{% endfor %}
						{% endfor %}
						<form method="post">
							<div class="card ">
								<div class="card-body">
									<div class="form-group">
										<label for="password">Nouveau mot de passe</label>
										<input type="password" name="password" id="password" class="form-control border border-dark" required>
									</div>
									<div class="form-group">
										<label for="confirm_password">Confirmer le mot de passe</label>
										<input type="password" name="confirm_password" id="confirm_password" class="form-control border border-dark" required>
									</div>
									<button type="submit" class="btn btn-primary">Réinitialiser</button>
								</div>
							</div>
						</form>
					</div>
					<div class="col-12 col-md-2"></div>
				</div>

			</div>
		</div>
	</div>


{% endblock %}
